const projects = [
  {
    title: "Project One",
    description:
      "A brief description of the project and the technologies used. This project showcases modern web development practices and innovative solutions.",
    image:
      "https://images.unsplash.com/photo-1555066931-4365d14bab8c?auto=format&fit=crop&q=80",
    link: "#",
  },
  {
    title: "Project Two",
    description:
      "Another project description showcasing your skills and expertise. Highlighting the impact and results achieved through thoughtful development.",
    image:
      "https://images.unsplash.com/photo-1517694712202-14dd9538aa97?auto=format&fit=crop&q=80",
