  },
];
---

<section id="projects" class="py-16 md:py-24 w-full px-4 sm:px-6 lg:px-8">
  <h2 class="text-3xl font-bold mb-12 text-raisin mt-8 md:mt-12">
    Featured Projects
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 w-full">
    {
      projects.map((project) => (
        <article class="group bg-white w-full">
          <a href={project.link} class="block">
            <div class="aspect-video overflow-hidden mb-4">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover transition-transform group-hover:scale-105"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2 text-raisin group-hover:text-olivine transition-colors">
                {project.title}
              </h3>
              <p class="text-raisin/60">{project.description}</p>
            </div>
          </a>
        </article>
      ))
    }
  </div>
</section>
