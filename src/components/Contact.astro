<section id="contact" class="py-16 md:py-24">
  <div class="max-w-2xl">
    <h2 class="text-3xl font-bold mb-4">Let's work together</h2>
    <p class="text-lg text-zinc-600 font-light mb-8">
      I'm always interested in hearing about new projects and opportunities.
    </p>
    
    <form class="space-y-6">
      <div>
        <label for="email" class="block text-sm font-medium mb-2">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full px-4 py-2 border border-zinc-200 focus:outline-none focus:ring-2 focus:ring-zinc-500"
          required
        />
      </div>
      
      <div>
        <label for="message" class="block text-sm font-medium mb-2">Message</label>
        <textarea
          id="message"
          name="message"
          rows="4"
          class="w-full px-4 py-2 border border-zinc-200 focus:outline-none focus:ring-2 focus:ring-zinc-500"
          required
        ></textarea>
      </div>
      
      <button
        type="submit"
        class="w-full md:w-auto px-6 py-3 bg-zinc-900 text-white hover:bg-zinc-800 transition-colors"
      >
        Send message
      </button>
    </form>
  </div>
</section>