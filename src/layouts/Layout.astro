---
import '@fontsource/inter-tight/300.css';
import '@fontsource/inter-tight/400.css';
import '@fontsource/inter-tight/500.css';
import '@fontsource/inter-tight/600.css';
import '@fontsource/inter-tight/700.css';
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Developer portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="bg-magnolia text-raisin">
    <Navigation />
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <slot />
    </div>
    <footer class="mt-32 border-t border-raisin/10 py-8">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
          <div>
            <h3 class="font-semibold mb-2">Contact</h3>
            <a href="mailto:hello@example.com" class="text-raisin/80 hover:text-olivine transition-colors">hello@example.com</a>
          </div>
          <div class="flex gap-6">
            <a href="https://github.com" class="text-raisin/80 hover:text-olivine transition-colors">GitHub</a>
            <a href="https://linkedin.com" class="text-raisin/80 hover:text-olivine transition-colors">LinkedIn</a>
            <a href="https://twitter.com" class="text-raisin/80 hover:text-olivine transition-colors">Twitter</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --font-inter: 'Inter Tight', sans-serif;
  }

  html {
    font-family: var(--font-inter);
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
  }
</style>