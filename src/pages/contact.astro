---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact - Your Name">
  <main class="py-16 px-4 sm:px-6 lg:px-8 w-full">
    <div class="w-full">
      <h1 class="text-4xl font-bold mb-8 text-raisin">Get in Touch</h1>
      <p class="text-lg text-raisin/80 mb-12">
        Interested in working together? I'm always open to discussing new
        projects and opportunities.
      </p>

      <form class="space-y-6 w-full max-w-2xl">
        <div>
          <label for="name" class="block text-sm font-medium mb-2 text-raisin"
            >Name</label
          >
          <input
            type="text"
            id="name"
            name="name"
            class="w-full px-4 py-2 bg-white border border-raisin/10 focus:outline-none focus:ring-2 focus:ring-olivine transition-colors"
            required
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium mb-2 text-raisin"
            >Email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            class="w-full px-4 py-2 bg-white border border-raisin/10 focus:outline-none focus:ring-2 focus:ring-olivine transition-colors"
            required
          />
        </div>

        <div>
          <label
            for="message"
            class="block text-sm font-medium mb-2 text-raisin">Message</label
          >
          <textarea
            id="message"
            name="message"
            rows="4"
            class="w-full px-4 py-2 bg-white border border-raisin/10 focus:outline-none focus:ring-2 focus:ring-olivine transition-colors"
            required></textarea>
        </div>

        <button
          type="submit"
          class="w-full md:w-auto px-6 py-3 bg-raisin text-magnolia hover:bg-olivine transition-colors"
        >
          Send message
        </button>
      </form>
    </div>
  </main>
</Layout>
